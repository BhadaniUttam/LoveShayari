<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".Activity.Main_Activity"
    android:background="#C8FFFFFF"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/teal_700">
        <TextView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"

            android:text="Love Shayari"
            android:textColor="@color/black"
            android:textSize="35dp" />
        <ImageView
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/baseline_share_24"
            android:layout_marginTop="@dimen/_6sdp"/>
        <ImageView
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/baseline_more_vert_24"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/_6sdp"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="41dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/expand"
            android:id="@+id/b1"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="1/7"
            android:textSize="@dimen/_25sdp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/reload"
            android:id="@+id/b2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_27sdp"
            android:background="#92E880"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:background="@color/teal_700">

        <ImageView
            android:layout_width="@dimen/_63sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/copy1"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/b3"/>

        <ImageView
            android:layout_width="@dimen/_63sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/ic_action_previous"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/b4"/>
        <ImageView
            android:layout_width="@dimen/_63sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/pencil2"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/b5"/>
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_action_next_item"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/b6"/>
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_action_share"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/b7"/>
    </LinearLayout>

</LinearLayout>